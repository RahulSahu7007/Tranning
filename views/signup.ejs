    <main class="main">
      
    
      <head>
          <meta charset="UTF-8" />
          <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      
          <link
            href="https://fonts.googleapis.com/css?family=Lato:300,300i,700"
            rel="stylesheet"
          />
      
          <link rel="stylesheet" href="css/style.css" />
          <link rel="shortcut icon" type="image/png" href="img/favicon.png" />
          <title>Natours | Create an account</title>
        </head>
        <div  class="login-form">
          <h2 class="heading-secondary ma-bt-lg">Create your account</h2>
          <form action="/api/v1/users/signup" method="post">
              <div class="form-group" >
                  <label class="form__label" for="name">Name</label>
                  <input class="form__input" id ="name" type="text" name="name" class="form-control" placeholder="text" required="required">
              </div>
              <div class="form-group">
                  <label class="form__label" >Email Address</label>
                  <input class="form__input" id ="email" type="email" class="form-control" name="email" placeholder="you@example.com" required="required">
              </div>
              <div class="form-group ma-bt-md">
                  <label class="form__label" >Password</label>
                  <input class="form__input" id ="password" type="password" class="form-control" name="password" placeholder="••••••••" required="required" minlength="8">
              </div>
              <div class="form-group ma-bt-md">
                  <label class="form__label" >Confirm Password</label>
                  <input class="form__input" id ="confirm_password" type="password" class="form-control" name="password" placeholder="••••••••" required="required" minlength="8">
              </div>
              <div class="form__group">
                  <button type="submit" class="btn btn--green">Sign Up</button>
              </div>>
          </form>
  
      </div>
  </main> 
   
